<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/customer.css">
    </head>

    <body>
        <%- include('../includes/header.ejs') %>
            <div class="flex">
            <div class="nav">
                <a href="/"><ion-icon name="people-outline"></ion-icon></a>
                <a href="/reservations" style="margin: 18px 0;"><ion-icon name="home-outline"></ion-icon></a>
                <a href="/services"><ion-icon name="clipboard-outline"></ion-icon></a>
            </div>
            <main>
                <form class="customer-form" action="/admin/update-customer" method="POST">
                    <div class="form-control" style="display: none">
                        <label for="Customer_id">Customer Id </label>
                        <input type="number" name="Customer_id" id="Customer_id" value="<%= Customer_id %>">
                    </div>
                    <div class="form-control">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" value="<%= Name %>">
                    </div>
                    <div class="form-control">
                        <label for="Address">Address</label>
                        <input type="text" name="Address" id="Address"  value="<%= Address %>">
                    </div>
                    <div class="form-control">
                        <label for="phone_number">Phone-Number</label>
                        <input type="number" name="phone_number" id="phone_number"  value="<%= Contact_No %>">
                    </div>
                    <div class="form-control">
                        <label for="age">Age</label>
                        <input type="number" name="age" id="age"  value="<%= Age %>">
                    </div>
                    <div class="form-control">
                        <label for="zip_code">Zip code</label>
                        <input type="number" name="zip_code" id="zip_code"  value="<%= Zip_code %>">
                    </div>
                    <button class="btn" type="submit">
                        Update Customer
                    </button>
                </form>
                
            </main>
        </div>
        <%- include('../includes/end.ejs') %>